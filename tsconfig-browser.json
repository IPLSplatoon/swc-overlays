{
    "compilerOptions": {
        "allowJs": true,
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es6",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "types": [
            "webpack-env"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "moduleResolution": "Node",
        "baseUrl": ".",
        "paths": {
            "types/*": [
                "src/types/*"
            ],
            "img/*": [
                "src/assets/img/*"
            ],
            "schemas": [
                "../ipl-overlay-controls/src/types/schemas/index"
            ]
        }
    },
    "include": [
        "src/graphics/**/*.ts",
        "src/shared/**/*.ts",
        "**/*.vue",
        "node_modules/@nodecg/types/augment-window.d.ts"
    ]
}
